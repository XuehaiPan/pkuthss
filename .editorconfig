# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{tex,bib}]
indent_size = 2
x-soft-wrap-text = true

[*.md]
indent_size = 2
x-soft-wrap-text = true

[Changelog*]
indent_size = 4

[pkuthss-gbk.def]
charset = gbk

[Makefile]
indent_style = tab
indent_size = 4

[utils/*]
indent_style = tab
indent_size = 4
